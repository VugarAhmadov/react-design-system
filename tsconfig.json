{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es2017.object" 
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
